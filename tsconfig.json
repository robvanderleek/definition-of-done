{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "types" : ["node"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
